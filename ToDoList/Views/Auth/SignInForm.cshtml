@model ToDoList.ViewModels.AuthViewModel
@{
    ViewBag.Title = "SignIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SignIn</h2>

@using (Html.BeginForm("SignInSucceed", "Auth"))
{
    @Html.ValidationSummary()

    <div class="form-group">
        <label>Email</label>
        @Html.TextBoxFor(m => m.User.email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.User.email)
    </div>
    <div class="form-group">
        <label>Password</label>
        @Html.TextBoxFor(m => m.User.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.User.Password)
    </div>


    <button type="submit" class="btn btn-primary ">Save</button>

}